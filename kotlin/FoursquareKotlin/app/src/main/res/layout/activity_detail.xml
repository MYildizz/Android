<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/mapView"
              tools:context=".DetailActivity"
              android:layout_marginTop="400dp"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <ImageView
            android:layout_width="412dp"
            android:layout_height="199dp" app:srcCompat="@drawable/googleg_standard_color_18"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp" android:id="@+id/detailImageView"/>
    <TextView
            android:text="Name"
            android:layout_width="223dp"
            android:layout_height="39dp"
            android:id="@+id/nameTextView" android:textSize="24sp"
            android:textAlignment="center" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/typeTextView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="Type"
            android:layout_width="234dp"
            android:layout_height="34dp"
            android:id="@+id/typeTextView" android:textSize="24sp"
            android:textAlignment="center" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/athmosphereTextView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Athmosphere"
            android:layout_width="240dp"
            android:layout_height="34dp"
            android:id="@+id/athmosphereTextView" android:textSize="24sp"
            android:textAlignment="center" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/mapView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>