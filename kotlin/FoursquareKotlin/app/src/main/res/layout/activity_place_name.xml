<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaceNameActivity" android:onClick="selectImage">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameText"
            android:hint="Name" android:layout_marginTop="34dp" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/typeText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/typeText"
            android:hint="Type" app:layout_constraintStart_toStartOf="@+id/nameText"
            app:layout_constraintTop_toBottomOf="@+id/nameText" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/athmosphereText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/athmosphereText"
            android:hint="Athmosphere" app:layout_constraintStart_toStartOf="@+id/typeText"
            app:layout_constraintTop_toBottomOf="@+id/typeText" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/athmosphereText" android:layout_marginBottom="135dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="41dp" android:layout_marginEnd="41dp"/>
    <Button
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="99dp"
            android:layout_marginBottom="42dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="next"/>
</android.support.constraint.ConstraintLayout>