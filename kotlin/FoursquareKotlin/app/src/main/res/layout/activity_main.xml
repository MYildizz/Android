<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".SingInActivity">
    <EditText
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameText"
            android:hint="UserName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/passwordText"/>
    <EditText
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"
            android:hint="Password" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="38dp"
            app:layout_constraintBottom_toTopOf="@+id/button"/>
    <Button
            android:text="signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:onClick="signIn"
            android:layout_marginTop="266dp" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="3dp"/>
    <Button
            android:text="signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:onClick="signUp"
            android:layout_marginTop="38dp" app:layout_constraintTop_toBottomOf="@+id/passwordText"
            app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="7dp"/>
</android.support.constraint.ConstraintLayout>