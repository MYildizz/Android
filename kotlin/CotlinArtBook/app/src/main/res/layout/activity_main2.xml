<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Name" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginTop="85dp"
            android:layout_marginStart="17dp" android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"/>
    <ImageView
            android:layout_width="227dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="82dp" app:layout_constraintTop_toBottomOf="@+id/editText"
            android:layout_marginBottom="57dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:onClick="select"/>
    <Button
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="63dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="129dp"
            android:onClick="save"/>
</android.support.constraint.ConstraintLayout>