<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/timeText" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/scoreText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="0"
                app:layout_row="0"
        />

        <ImageView
                android:id="@+id/imageView1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="0"
                app:layout_row="1"
        />

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="0"
                app:layout_row="2"
        />

        <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="1"
                app:layout_row="0"
        />

        <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="1"
                app:layout_row="1"
        />

        <ImageView
                android:id="@+id/imageView5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="1"
                app:layout_row="2"
        />

        <ImageView
                android:id="@+id/imageView6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="2"
                app:layout_row="0"
        />

        <ImageView
                android:id="@+id/imageView7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="2"
                app:layout_row="1"
        />

        <ImageView
                android:id="@+id/imageView8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/sam"
                android:onClick="increaseScore"
                app:layout_column="2"
                app:layout_row="2"
        />


    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time : 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText" android:hapticFeedbackEnabled="false"
            android:textSize="30sp" android:textAlignment="center" android:gravity="center"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="28dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Score : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreText" android:textAlignment="center"
            android:textSize="24sp" android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginBottom="92dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>